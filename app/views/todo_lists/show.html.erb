<div class="card-header d-flex justify-content-between">
  <div>
    <h5 class="m-1"><b><%= @todo_list.title %></b></h5>
    <p class="text-secondary m-0"><small><%= @todo_list.percent_complete %>% Complete (<%= @todo_list.completed_items %>/<%= @todo_list.total_items%> Todo Items)</small></p>
  </div>
  <div>
    <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: 'btn btn-info btn-sm ' %>
  </div>
</div>
<div class="card-body">
  <div class="progress mb-4">
    <div class="progress-bar" role="progressbar" style="width: <%= @todo_list.percent_complete %>%" aria-valuenow="<%= @todo_list.percent_complete %>" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <ul class="list-group">
    <% @todo_list.todo_items.each.each do |todo_items| %>
      <% if todo_items.completed %>
        <li class="list-group-item">
          <div class="d-flex justify-content-between">
            <span class="text-muted">
              <em><%= todo_items.description %></em>
            </span>
            <%= link_to '#', class: 'btn btn-success' do %>
              <i class="fa fa-times"></i>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="list-group-item">
          <div class="d-flex justify-content-between">
            <span>
              <%= todo_items.description %>
            </span>
            <%= link_to '#', class: 'btn btn-success' do %>
              <i class="fa fa-check"></i>
            <% end %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
